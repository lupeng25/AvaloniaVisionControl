<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vision="using:AvaloniaVisionControl"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UserControlApp.Window3"
        
        xmlns:vm="using:UserControlApp.ViewModels"
        x:DataType="vm:Window2ViewModel"
        Title="Window3 - 图像显示控件测试">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 控制按钮区域 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Name="BtnLoadImage" Content="加载图像" Margin="5" Click="BtnLoadImage_Click"/>
            <Button Name="BtnAddElements" Content="添加图元" Margin="5" Click="BtnAddElements_Click"/>
            <Button Name="BtnClearElements" Content="清除图元" Margin="5" Click="BtnClearElements_Click"/>
        </StackPanel>
        
        <!-- 图像显示区域 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <vision:CtlOnlyShowImage x:Name="ImageControl"/>
        </Border>
    </Grid>

</Window>
